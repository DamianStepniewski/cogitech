{% extends 'base.html.twig' %}

{% block title %}Posty{% endblock %}

{% block body %}

    <div class="card">
        <div class="card-header">
            Posty
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                <tr>
                    <th>Tytuł</th><th>Autor</th><th>Treść</th><th></th>
                </tr>
                </thead>
                <tbody>
                {% for post in posts %}
                    <tr>
                        <td>{{ post.title }}</td>
                        <td>{{ post.author }}</td>
                        <td>{{ post.body }}</td>
                        <td><a href="{{ path('post_delete', {id: post.id}) }}"><button type="button" class="btn btn-danger">Usuń</button></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
